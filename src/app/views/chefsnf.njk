{% extends "layout.njk" %}

{% block header %}
            <div class="links">
                <a class="logo-index" href="/"><img src="/assets/logo.png" alt=""></a>
                <div class="sobrereceita">
                    <a class="sobre" href="/sobre">Sobre</a>
                    <a class="receita"href="/receitas">Receitas</a>
                    <a class="chefs-usuario" href="/chefs">Chefs</a>
                    <form class="filtro" action="/chefs" method="GET">
                        <input 
                            type="text"
                            name="filter"
                            placeholder="Buscar um Chef"
                            value="{{filter}}"
                        >
                        <button type="submit">Buscar</button>

                    </form>
                </div>
            </div>
{% endblock %}


{% block mid %}

    <div class="corpo-chefs" id="novoschefs">

        <h1 class="chefs-name">Lista de Chefs</h1> 
        <div class="error-message"><h1>Ops... Chef nao encontrado !</h1></div>
       
    </div>
 

{% endblock %}