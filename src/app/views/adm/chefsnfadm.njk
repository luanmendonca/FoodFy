{% extends "layoutadm.njk" %}

{% block header %}
            
            <div class="header-adm">
                <div class="links-adm">
                    <a href="/"><img src="/assets/logo-adm.png" alt=""></a>
                    <div class="receita-chefs">
                        <a href="/adm">RECEITAS</a>
                        <a href="/adm/chefs" class="chefs-adm" >CHEFS</a>
                    </div>
                </div>
            </div>
            
{% endblock %}


{% block content %}
    <div class="admheader">
        <a class="buttonnewrecipe" href="/adm/chefs/create">Novo chef</a> 
        <form class="filtro" action="/adm/chefs" method="GET">
            <input 
                type="text"
                name="filter"
                placeholder="Buscar Chef"
                value="{{filter}}"
                >
            <button type="submit">Buscar</button>

        </form>
    </div> 
    
    
    
    <div class="corpo-chefs" id="novoschefs">
        <h1 class="h1-admchefs">Gerenciar chefs</h1>
        
       <div class="error-message"><h1>Ops... Chef nao encontrado !</h1></div>
       
    </div>
 

{% endblock %}