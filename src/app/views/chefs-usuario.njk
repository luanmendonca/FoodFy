{% extends "layout.njk" %}

{% block header %}
            <div class="links">
                <a class="logo-index" href="/"><img src="/assets/logo.png" alt=""></a>
                <div class="sobrereceita">
                    <a class="sobre" href="/sobre">Sobre</a>
                    <a class="receita"href="/receitas">Receitas</a>
                    <a class="chefs-usuario" href="/chefs">Chefs</a>
                    <form class="filtro" action="/chefs" method="GET">
                        <input 
                            type="text"
                            name="filter"
                            placeholder="Buscar um Chef"
                            value="{{filter}}"
                        >
                        <button type="submit">Buscar</button>

                    </form>
                </div>
            </div>
{% endblock %}


{% block mid %}

    <div class="corpo-chefs" id="novoschefs">

        <h1 class="chefs-name">Lista de Chefs</h1> 
        <section>
            <div class="cardsusuario-chefs">
                {% for chef in chefs %}
                <div class="card-chefs">
                    <div>
                        <img class="img-chef" src={{chef.avatar}} alt="{{chef.name}}">
                    </div>
                    
                    <div class="second-chef">
                        <h3>{{chef.name}}</h3>
                        <a href="/chefs/{{chef.id}}">Visualizar</a>
                    </div>
                    
               </div>
                {% endfor %}
            </div>
            

        </section>
        
        <div class="pagination"
            data-page={{pagination.page}}
            data-total={{pagination.total}}
            data-filter={{filter}}
        ></div>
       
    </div>
 

{% endblock %}